{
  "name": "storyweaver",
  "displayName": "StoryWeaver - Your Whole Stack, One Conversation",
  "description": "AI-powered pair programming with Gemini. Analyze entire repositories instantly.",
  "version": "1.0.0",
  "publisher": "StoryWeaver",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "gemini",
    "code analysis",
    "repository analysis",
    "pair programming",
    "codebase understanding"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "storyweaver.showDemo",
        "title": "StoryWeaver: Show Demo"
      },
      {
        "command": "storyweaver.analyzeCode",
        "title": "StoryWeaver: Analyze Current File"
      },
      {
        "command": "storyweaver.explainCode",
        "title": "StoryWeaver: Explain Selected Code"
      },
      {
        "command": "storyweaver.analyzeRepository",
        "title": "StoryWeaver: Analyze Entire Repository"
      },
      {
        "command": "storyweaver.askAboutRepo",
        "title": "StoryWeaver: Ask Question About Codebase"
      },
      {
        "command": "storyweaver.findRelated",
        "title": "StoryWeaver: Find Related Files"
      },
      {
        "command": "storyweaver.toggleSuggestions",
        "title": "StoryWeaver: Toggle AI Autocomplete"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "storyweaver.explainCode",
          "when": "editorHasSelection",
          "group": "StoryWeaver"
        },
        {
          "command": "storyweaver.analyzeCode",
          "when": "editorTextFocus",
          "group": "StoryWeaver"
        },
        {
          "command": "storyweaver.toggleSuggestions",
          "when": "editorHasSelection",
          "group": "StoryWeaver"
        }
      ],
      "explorer/context": [
        {
          "command": "storyweaver.analyzeRepository",
          "group": "StoryWeaver"
        }
      ],
      "commandPalette": [
        {
          "command": "storyweaver.analyzeRepository",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "storyweaver.askAboutRepo",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "storyweaver.findRelated",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "dependencies": {
    "@google/genai": "^1.37.0"
  }
}