{
  "name": "storyweaver",
  "displayName": "StoryWeaver - AI Code Assistant",
  "description": "Smart coding assistant powered by Gemini 3. Free tier included!",
  "version": "1.0.0",
  "publisher": "StoryWeaverAI",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "AI"
  ],
  "keywords": [
    "ai",
    "gemini",
    "code analysis",
    "autocomplete",
    "debug"
  ],
  "icon": "media/icon.png",
  "main": "./extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "storyweaver.showDemo",
        "title": "Show StoryWeaver Demo"
      },
      {
        "command": "storyweaver.analyzeCode",
        "title": "Analyze Code with AI"
      },
      {
        "command": "storyweaver.explainCode",
        "title": "Explain Selected Code"
      },
      {
        "command": "storyweaver.upgrade",
        "title": "Get Real Gemini 3"
      },
      {
        "command": "storyweaver.status",
        "title": "Check Service Status"
      },
      {
        "command": "storyweaver.welcome",
        "title": "Show Welcome Guide"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "storyweaver.explainCode",
          "when": "editorHasSelection",
          "group": "AI Assistant"
        },
        {
          "command": "storyweaver.analyzeCode",
          "when": "editorTextFocus",
          "group": "AI Assistant"
        }
      ],
      "commandPalette": [
        {
          "command": "storyweaver.showDemo",
          "when": "always"
        },
        {
          "command": "storyweaver.analyzeCode",
          "when": "editorTextFocus"
        },
        {
          "command": "storyweaver.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "storyweaver.upgrade",
          "when": "always"
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}